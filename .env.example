# Server Configuration
PORT=8080

# Qiniu Cloud API Configuration
QINIU_API_KEY=your-qiniu-api-key-here
QINIU_BASE_URL=https://openai.qiniu.com/v1

# TTS Configuration
TTS_VOICE_TYPE=qiniu_zh_female_wwxkjx
TTS_ENCODING=mp3
TTS_SPEED_RATIO=1.0

# ASR Configuration
ASR_MODEL=asr
ASR_FORMAT=wav

# LLM Configuration
LLM_MODEL=deepseek/deepseek-v3.1-terminus
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7

# Audio Storage
STATIC_AUDIO_PATH=./static/audio
TEMP_AUDIO_PATH=./temp

# Security
ENABLE_SAFE_MODE=true
MAX_AUDIO_SIZE=10485760
